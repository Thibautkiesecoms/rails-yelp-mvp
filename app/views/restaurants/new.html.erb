<%= form_for @restaurant do |f| %>

  <%= f.label :name, "Enter restaurant's name" %>
  <%= f.text_field :name%>

  <%= f.label :address, "Enter his address" %>
  <%= f.text_field :address %>

  <%= f.label :phone_number, "Enter his phone number" %>
  <%= f.text_field :phone_number %>

  <%= f.label :category, "Type ?" %>
  <%= f.text_field :category %>


  <%= f.submit %>

<% end %>
